<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="650.0" prefWidth="800.0"
            style="-fx-background-color: #e4e4e4;" stylesheets="@../source/login.css" xmlns="http://javafx.com/javafx/21"
            fx:controller="controller.LoginController">
    <children>
        <AnchorPane blendMode="SRC_ATOP" prefHeight="650.0" prefWidth="800.0" styleClass="pane"
                    stylesheets="@../source/login.css">
            <children>
                <ImageView fitHeight="85.0" fitWidth="84.0" layoutX="38.0" layoutY="199.0" opacity="0.38"
                           pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../source/account.png"/>
                    </image>
                </ImageView>
                <Button id="buttonLogin" fx:id="btnLogin" layoutX="173.0" layoutY="343.0" mnemonicParsing="false"
                        onAction="#Login" prefHeight="39.0" prefWidth="115.0" stylesheets="@../source/login.css"
                        text="Log In" textFill="WHITE">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Button>
                <PasswordField fx:id="tfPassword" layoutX="105.0" layoutY="271.0" prefHeight="40.0" prefWidth="250.0"
                               promptText="Password">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </PasswordField>
                <Label fx:id="welcomeLabel" layoutX="46.0" layoutY="90.0" prefHeight="95.0" prefWidth="300.0"
                       text="Log In">
                    <font>
                        <Font name="Symbol" size="40.0"/>
                    </font>
                </Label>
                <ImageView fitHeight="300.0" fitWidth="400.0" layoutX="400.0" layoutY="137.0">
                    <image>
                        <Image url="@../source/cityy.png"/>
                    </image>
                </ImageView>
                <ImageView fitHeight="39.0" fitWidth="38.0" layoutX="61.0" layoutY="274.0" opacity="0.35">
                    <image>
                        <Image url="@../source/padlock.png"/>
                    </image>
                </ImageView>
                <TextField fx:id="tfUsername" layoutX="106.0" layoutY="219.0" promptText="Username">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </TextField>
            </children>
        </AnchorPane>
   </children>
</AnchorPane>
