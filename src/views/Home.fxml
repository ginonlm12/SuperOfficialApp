<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="allElements" prefHeight="650.0" prefWidth="800.0"
            stylesheets="@../source/Home.css" xmlns="http://javafx.com/javafx/21"
            fx:controller="controller.HomeController">
    <children>
        <VBox fx:id="phanconlai" prefHeight="650.0" prefWidth="800.0">
            <children>
                <AnchorPane id="topbar" prefHeight="50.0" prefWidth="800.0">
                    <children>
                        <Button id="menubar" fx:id="showBtn" focusTraversable="false" mnemonicParsing="false"
                                onMouseClicked="#onShowbtnClicked" prefHeight="50.0" prefWidth="50.0">
                            <graphic>
                                <ImageView fitHeight="33.0" fitWidth="33.0">
                                    <image>
                                        <Image url="@../source/menu-bar.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <MenuButton id="menubutton" focusTraversable="false" layoutX="93.0" mnemonicParsing="false"
                                    prefHeight="50.0" prefWidth="115.0" text="Cài đặt" AnchorPane.rightAnchor="1.0">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#changepassClicked"
                                          text="Thay đổi mật khẩu"/>
                                <MenuItem mnemonicParsing="false" onAction="#logoutClicked" text="Đăng xuất"/>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <MenuItem mnemonicParsing="false" onAction="#restoreClicked" text="Restore Dữ liệu"/>
                                <MenuItem mnemonicParsing="false" onAction="#backupClicked" text="Backup Dữ liệu"/>
                            </items>
                            <graphic>
                                <ImageView fitHeight="38.0" fitWidth="38.0">
                                    <image>
                                        <Image url="@../source/manager.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </MenuButton>
                    </children>
                </AnchorPane>
                <Pane id="mainPane" fx:id="mainPane" prefHeight="600.0" prefWidth="800.0"/>
            </children>
        </VBox>
        <Pane fx:id="middlePane" disable="true" onMouseClicked="#middlePaneClicked" prefHeight="650.0"
              prefWidth="800.0"/>
        <VBox id="menubar" fx:id="menu" layoutX="-165.0" prefHeight="650.0" prefWidth="165.0">
            <children>
                <Button id="logobtn" focusTraversable="false" mnemonicParsing="false" onMouseClicked="#logobtnClicked"
                        prefHeight="80.0" prefWidth="165.0" stylesheets="@../source/Home.css" text="SPM">
                    <font>
                        <Font name="Britannic Bold" size="20.0"/>
                    </font>
                    <graphic>
                        <ImageView fitHeight="40.0" fitWidth="40.0">
                            <image>
                                <Image url="@../source/logo.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <textFill>
                        <LinearGradient endX="1.0" endY="1.0">
                            <stops>
                                <Stop>
                                    <color>
                                        <Color red="1.0"/>
                                    </color>
                                </Stop>
                                <Stop offset="0.006711409395973154">
                                    <color>
                                        <Color red="1.0"/>
                                    </color>
                                </Stop>
                                <Stop offset="0.20187428384350953">
                                    <color>
                                        <Color red="1.0" green="0.8833333253860474"/>
                                    </color>
                                </Stop>
                                <Stop offset="0.38054509739728265">
                                    <color>
                                        <Color red="0.20000000298023224" green="1.0"/>
                                    </color>
                                </Stop>
                                <Stop offset="0.6025331478146995">
                                    <color>
                                        <Color green="1.0" blue="0.75"/>
                                    </color>
                                </Stop>
                                <Stop offset="0.7683745293828775">
                                    <color>
                                        <Color green="0.01904761977493763" blue="1.0"/>
                                    </color>
                                </Stop>
                                <Stop offset="0.9786585365853658">
                                    <color>
                                        <Color red="1.0"/>
                                    </color>
                                </Stop>
                                <Stop offset="1.0">
                                    <color>
                                        <Color red="1.0"/>
                                    </color>
                                </Stop>
                            </stops>
                        </LinearGradient>
                    </textFill>
                </Button>
                <Button mnemonicParsing="false" onAction="#setTrangChu" prefHeight="60.0" prefWidth="165.0"
                        styleClass="buttoninmenu" stylesheets="@../source/Home.css" text="Trang chủ" textFill="WHITE">
                    <font>
                        <Font name="Calibri Bold" size="18.0"/>
                    </font>
                    <graphic>
                        <ImageView fitHeight="18.0" fitWidth="18.0">
                            <image>
                                <Image url="@../source/home.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button fx:id="btnNhanKhau" mnemonicParsing="false" onAction="#setNhanKhau" prefHeight="60.0"
                        prefWidth="218.0" styleClass="buttoninmenu" stylesheets="@../source/Home.css" text="Nhân khẩu"
                        textFill="WHITE">
                    <font>
                        <Font name="Arial Bold" size="20.0"/>
                    </font>
                    <graphic>
                        <ImageView fitHeight="18.0" fitWidth="18.0" styleClass="image-view">
                            <image>
                                <Image url="@../source/person.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button fx:id="btnHoKhau" mnemonicParsing="false" onAction="#setHoKhau" prefHeight="60.0"
                        prefWidth="222.0" styleClass="buttoninmenu" stylesheets="@../source/Home.css" text="Hộ khẩu   "
                        textFill="WHITE">
                    <font>
                        <Font name="Arial Bold" size="20.0"/>
                    </font>
                    <graphic>
                        <ImageView fitHeight="18.0" fitWidth="18.0">
                            <image>
                                <Image url="@../source/people.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button fx:id="btnKhoanPhi" mnemonicParsing="false" onAction="#setKhoanPhi" prefHeight="60.0"
                        prefWidth="217.0" styleClass="buttoninmenu" stylesheets="@../source/Home.css" text="Khoản phí"
                        textFill="WHITE" wrapText="true">
                    <font>
                        <Font name="Arial Bold" size="20.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button fx:id="btnDongPhi" mnemonicParsing="false" onAction="#setDongPhi" prefHeight="60.0"
                        prefWidth="216.0" styleClass="buttoninmenu" stylesheets="@../source/Home.css" text="Đóng phí "
                        textFill="WHITE">
                    <font>
                        <Font name="Arial Bold" size="20.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button fx:id="btnThongKe" mnemonicParsing="false" onAction="#setThongKe" prefHeight="60.0"
                        prefWidth="214.0" styleClass="buttoninmenu" stylesheets="@../source/Home.css" text="Thống kê"
                        textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button fx:id="btnPhong" mnemonicParsing="false" onAction="#setPhong" prefHeight="60.0"
                        prefWidth="214.0" styleClass="buttoninmenu" stylesheets="@../source/Home.css" text="Phòng"
                        textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
